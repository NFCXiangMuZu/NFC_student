<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:id="@+id/sign_in_window_layout"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#fff"
        android:layout_alignParentTop="true"
        android:id="@+id/sign_in_window_NB"
        >

        <Button
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/close_button"
            android:layout_marginRight="5dp"
            android:layout_centerVertical="true"
            android:id="@+id/sign_in_window_close_button"

            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/sign_in_window_title"
            android:text="身份绑定"
            android:textSize="10pt"
            android:textColor="#2d7fb9"
            android:layout_centerInParent="true"
            android:layout_marginLeft="10dp"
            />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/sign_in_window_NB"
        android:id="@+id/sign_in_window_xuehao"
        android:layout_marginTop="10dp"
        >

        <EditText
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:layout_centerInParent="true"
            android:hint="请输入学号"
            android:id="@+id/sign_in_window_xuehao_edit"
            android:maxLength="15"
            />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/sign_in_window_xuehao"
        android:layout_marginTop="10dp"
        android:id="@+id/sign_in_window_name"
        >

        <EditText
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:layout_centerInParent="true"
            android:hint="请输入姓名"
            android:id="@+id/sign_in_window_name_edit"
            />

    </RelativeLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/sign_in_window_confirm_button"
        android:background="#2d7fb9"
        android:text="确认"
        android:textColor="#fff"
        android:textStyle="bold"
        android:layout_below="@id/sign_in_window_name"
        android:layout_margin="10dp"
        />


</RelativeLayout>