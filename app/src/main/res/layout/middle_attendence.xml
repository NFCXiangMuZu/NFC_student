<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background1"
    android:id="@+id/middle_attendence_layout"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/middle_attendence_NB"
        android:background="#fff"
        >

        <Button
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/middle_attendence_leftbutton"
            android:layout_alignParentLeft="true"
            android:background="@drawable/left_button_low"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/middle_attendence_title"
            android:layout_centerInParent="true"
            android:textColor="#000"
            android:textSize="8pt"
            android:text="点名中继"

            />

        <Button
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:id="@+id/middle_attendence_rightbutton"
            android:background="@drawable/folder_touming2_low"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            />

    </RelativeLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/empty_view"
        android:layout_below="@id/middle_attendence_NB"
        android:layout_marginTop="20dp"
        android:background="#fff"
        android:text="已签到学生名单"
        android:textSize="8pt"
        android:textColor="#000"
        />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/middle_attendence_listview"
        android:layout_below="@id/empty_view"
        android:divider="#205ec1"
        android:dividerHeight="1dp"
        android:background="#fff"
        ></ListView>

</RelativeLayout>
